   "source": [
    "#Para la deteccion de colores primero pasamos la imagen al espacio hsv\n",
    "#despues tenemos que establecer los rangos en los que se encontrara el color a detctar\n",
    "#Para ello se tendra que hacer uso de la grafica de colores del modelo hsv(internet)\n",
    "import cv2\n",
    "import numpy as np\n",
    "\n",
    "img = cv2.imread('limon.png')\n",
    "img_hsv = cv2.cvtColor(img, cv2.COLOR_BGR2HSV)\n",
    "\n",
    "#deteccion del amarillo\n",
    "amarillo_bajo = np.array([15,50,50],np.uint8) #aqui establecemos el rango inferior para el valor, en este caso 20\n",
    "amarillo_alto = np.array([25,255,255],np.uint8) #aqui establecemos el rango superior para el valor, en este caso 32\n",
    "mascara1 = cv2.inRange(img_hsv,amarillo_bajo,amarillo_alto)\n",
    "\n",
    "#deteccion del verde\n",
    "verde_bajo = np.array([36,50,50],np.uint8) #aqui establecemos el rango inferior para el valor, en este caso 36\n",
    "verde_alto = np.array([75,255,255],np.uint8) #aqui establecemos el rango superior para el valor, en este caso 75\n",
    "mascara2 = cv2.inRange(img_hsv,verde_bajo,verde_alto)\n",
    "\n",
    "#ahora buscamos los contornos de cada una de las mascaras\n",
    "contorno_amarillo,_ = cv2.findContours(mascara1,cv2.RETR_EXTERNAL,cv2.CHAIN_APPROX_SIMPLE)\n",
    "contorno_verde,_ = cv2.findContours(mascara2,cv2.RETR_EXTERNAL,cv2.CHAIN_APPROX_SIMPLE)\n",
    "\n",
    "cont = 0\n",
    "for c in contorno_amarillo:\n",
    "    area = cv2.contourArea(c)\n",
    "    if (area>1000):\n",
    "        cont = cont + 1\n",
    "        x,y,w,h = cv2.boundingRect(c)\n",
    "        cv2.rectangle(img,(x,y),(x+w,y+h),(0,255,255),2)\n",
    "        cv2.putText(img,str(cont),(x,y-5),cv2.FONT_HERSHEY_SIMPLEX,0.5,(0,255,255),2)\n",
    "        \n",
    "cont = 0   \n",
    "for c in contorno_verde:\n",
    "    area = cv2.contourArea(c)\n",
    "    if (area>1000):\n",
    "        cont = cont + 1\n",
    "        x,y,w,h = cv2.boundingRect(c)\n",
    "        cv2.rectangle(img,(x,y),(x+w,y+h),(0,255,0),2)\n",
    "        cv2.putText(img,str(cont),(x,y-5),cv2.FONT_HERSHEY_SIMPLEX,0.5,(0,255,0),2)\n",
    "\n",
    "        \n",
    "cv2.imshow('Imagen de entrada',img)\n",
    "cv2.imshow('Imagen de entrada en hsv',img_hsv)\n",
    "cv2.imshow('mascara1',mascara1)\n",
    "cv2.imshow('mascara2',mascara2)\n",
    "\n",
    "cv2.waitKey(0)\n",
    "cv2.destroyAllWindows()"
   ]
